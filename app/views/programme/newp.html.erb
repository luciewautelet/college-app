<%= form_for @programme, url: createp_path do |d| %>
    <%= d.label :'Programme Code' %> <br />
    <%= d.text_field :code %> <br />
    <%= d.label :'Programme Name' %> <br />
    <%= d.text_field :pname %> <br />
    <%= d.label :'Department' %> <br />
    <%= d.select :department_id, Department.all.collect { |p|
    [p.dname, p.department_id]}, {include_blank: true} %> <br />
    <%= d.submit :'Add Programme' %> <br />
<% end %>
